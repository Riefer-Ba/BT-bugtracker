@model List<UserRoles>

@{
    ViewData["Title"] = ViewData["Message"];
}

@* Manage Users Form *@
<div class="card" style="width: 26em;" >
    <div class="card-header">
           <h3>Manage Users in '@ViewBag.CurrentRole.Name' Role </h3>
    </div>


  <div class="card-body">



  <form asp-action="GiveRoleToUser" asp-route-Id="@ViewBag.CurrentRole.Id"  method="post" >  
    @for (int i=0; i< Model.Count ;i++){


            <div class="form-check">
                <input asp-for="@Model[i].Selected" class="form-check-input"> 
                <label class="form-check-label" asp-for="@Model[i].Selected"> @Model[i].UserName </label>
                <input type="hidden" asp-for="@Model[i].UserId">
                <input type="hidden" asp-for="@Model[i].UserName">
            </div>

    }
    <button type="submit" class="btn btn-primary float-end">Save changes</button>
         </form>



</div>

  
</div>
